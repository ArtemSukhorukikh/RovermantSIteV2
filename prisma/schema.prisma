generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  password  String?
  surname String
  name String
  patronymic String?
  role Role @default(USER)
  companies Company[]
}

enum Role {
  USER
  ADMIN
}

model Company {
  id Int @id @default(autoincrement())
  name String
  description String
  data Json?
  userId Int
  user User @relation(fields: [userId], references: [id])
  conditions CompanyCondition[]
}

model StateProgram {
  id Int @id @default(autoincrement())
  name String
  resource String
  path String?
  url String?
  status ProgramStatus @default(NEEDINDEXED)
  conditions Condition[]
}

enum ProgramStatus {
  INDEXED
  NEEDINDEXED
}

model Condition {
  id Int @id @default(autoincrement())
  programId Int
  program StateProgram @relation(fields: [programId], references: [id])
  condition String
  CompanyCondition CompanyCondition[]
}

model CompanyCondition {
  companyId   Int
  conditionId Int
  company     Company      @relation(fields: [companyId], references: [id])
  condition   Condition    @relation(fields: [conditionId], references: [id])

  @@id([companyId, conditionId])
}